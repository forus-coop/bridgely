<div class='col-md-2'></div>
<div class='well col-md-8'>
  <legend>Send a SMS Message</legend>
  <div class="form-group">
    <label class="col-md-2 control-label">From</label>
    <div class="col-md-8">
      <p class="form-control-static">(415) 000-0000</p>
      <p><small><em>Your Twillio SMS Number</em></small></p>
    </div>
    <div class="col-md-2"></div>
  </div>

  <div class="form-group">
    <label class="col-md-2 control-label">To</label>
    <div class="col-md-8">
      <p class="form-control-static">Whole Mobile Directory / Selected Employees</p>
    </div>
    <div class="col-md-2"></div>
  </div>

  <div class="form-group">
    <label class="col-md-2 control-label">Message</label>
    <div class="col-md-8">
      <textarea class="form-control" rows="3"></textarea>
      <span class="help-block">160 / 160 characters remaining</span>
    </div>
    <div class="col-md-2"></div>
  </div>

  <div class="form-group">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <button type="button" class="btn btn-lg btn-primary btn-block">Send SMS</button>
    </div>
    <div class="col-md-2"><span class="help-block"><br />or, <a href="#">cancel</a></span></div>
  </div>
</div>
<div class='col-md-2'></div>

